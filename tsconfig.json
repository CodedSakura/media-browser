  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES6",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "es6",
      "dom"
    ],
    "outDir": "./build",
    "strict": true,
    "importsNotUsedAsValues": "error"
  }
}
